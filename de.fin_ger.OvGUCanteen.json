{
    "app-id": "de.fin_ger.OvGUCanteen",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.36",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "ovgu-canteen-gtk",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network",
        "--env=GSETTINGS_BACKEND=keyfile"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/OvGUCanteen/cargo",
            "CARGO_BUILD_ARGS": "--offline --release --verbose",
            "PREFIX": "/app"
        }
    },
    "modules": [
        {
            "name": "OvGUCanteen",
            "buildsystem": "simple",
            "build-commands": [
                "cargo --offline fetch --manifest-path Cargo.toml --verbose",
                "make install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/fin-ger/ovgu-canteen-gtk/releases/download/v0.1.1/ovgu-canteen-gtk-0.1.1.tgz",
                    "sha256": "efba2cf06e99561aebb26e0da95477b8891750050acb144c95467ff92fd06823"
                },
                "flatpak.lock"
            ]
        }
    ]
}
